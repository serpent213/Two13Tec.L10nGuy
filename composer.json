{
    "description": "Neos CMS l10n helper",
    "type": "neos-package",
    "name": "two13tec/l10nguy",
    "version": "0.2.0",
    "require": {
        "php": "^8.4",
        "neos/flow": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.1",
        "squizlabs/php_codesniffer": "^3.13",
        "friendsofphp/php-cs-fixer": "^3.87",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4"
    },
    "suggest": {
        "php-llm/llm-chain": "Required for LLM translations"
    },
    "autoload-dev": {
        "psr-4": {
            "Two13Tec\\L10nGuy\\Tests\\": "Tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "Two13Tec\\L10nGuy\\": "Classes/"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Two13Tec.L10nGuy"
        }
    }
}
